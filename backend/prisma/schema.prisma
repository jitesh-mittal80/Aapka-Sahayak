generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Citizen {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  language  String?
  createdAt DateTime @default(now())

  complaints Complaint[]
}

model Complaint {
  id String @id @default(uuid())
  description String
  category ComplaintCategory?
  status      ComplaintStatus @default(OPEN)

  citizenId String
  citizen   Citizen @relation(fields: [citizenId], references: [id])

  citizenPhone String?

  verifiedAt DateTime?
  createdAt  DateTime  @default(now())

  CallLog CallLog[]
}

model CallLog {
  id            Int      @id @default(autoincrement())
  callSid       String   @unique
  complaintId   String
  direction     CallDirection
  speechResult  String?     // What user actually said
  aiDecision    String?     // AI interpreted intent / yes / no
  confidence    Float?      // AI confidence score
  verifiedAt    DateTime?   // When citizen confirmed
  createdAt     DateTime    @default(now())

  complaint     Complaint  @relation(fields: [complaintId], references: [id])
}

enum ComplaintStatus {
  OPEN
  IN_PROGRESS
  RESOLVED_PENDING_VERIFICATION
  RESOLVED_CONFIRMED
  REOPENED
}

enum CallDirection {
  INBOUND
  OUTBOUND
}

enum ComplaintCategory {
  UNCLASSIFIED
  GARBAGE
  WATER
  SEWER
  ROAD
  STREET_LIGHT
  OTHER
}

model CallerSession {
  id            String   @id @default(uuid())
  callerId      String   @unique
  currentStep   String?
  context       Json?
  lastActiveAt  DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
}
